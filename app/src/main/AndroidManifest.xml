<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.leonp.okfood">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_leaf"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UserAccount.Account.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".UserAccount.Account.RegisterActivity"/>
        <activity android:name=".UserAccount.Account.MainActivity.MainActivity"/>
        <activity android:name=".UserAccount.Account.Matcher.MatcherActivity"/>
        <activity android:name=".UserAccount.Account.Profile.ProfileActivity"/>
        <activity android:name=".UserAccount.Account.CreateNewPost.CreatePostActivity"/>
        <activity android:name=".UserAccount.Account.Comments.CommentThreadActivity"/>
        <activity android:name=".UserAccount.Account.PublishPost.PublishPostActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>